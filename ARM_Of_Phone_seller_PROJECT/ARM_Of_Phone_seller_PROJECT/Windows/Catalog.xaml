<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARM_Of_Phone_seller_PROJECT"
        xmlns:Model="clr-namespace:ARM_Of_Phone_seller_PROJECT.Model" x:Class="ARM_Of_Phone_seller_PROJECT.Catalog"
        mc:Ignorable="d"
        Title="Каталог и сортировка" Height="450" Width="807.464" WindowStartupLocation="CenterScreen" Icon="pack://application:,,,/Icons/Catalog.png" Background="#FF1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="49.6"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="228.8"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Margin="0,0,-0.2,0" Grid.RowSpan="2">
            <Rectangle Stroke="White" Margin="10,10,10,0" Height="33" VerticalAlignment="Top">
                <Rectangle.Fill>
                    <SolidColorBrush Color="White" Opacity="0.25"/>
                </Rectangle.Fill>
            </Rectangle>
            <Label Content="Параметр 1:" Margin="10,14,141,0" TextOptions.TextFormattingMode="Display" VerticalAlignment="Top" Foreground="White"/>
            <Label Content="Placeholder" Margin="88,14,10,0" TextOptions.TextFormattingMode="Display" VerticalAlignment="Top" Foreground="White"/>
        </Grid>
        <DataGrid x:Name="CatalogGrid" Margin="0,0,0,0.4" IsSynchronizedWithCurrentItem="True">
            <!--<DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Path = ID_Клиента}" Foreground="White"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding Фамилия}" Foreground="White"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding Имя}" Foreground="White"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding Отчество}" Foreground="White"/>
                <DataGridTextColumn Header="Номер паспорта" Binding="{Binding Номер_паспорта}" Foreground="White"/>
            </DataGrid.Columns>-->
        </DataGrid>
        <Button x:Name="SaveChanges" HorizontalAlignment="Left" Margin="10,4.6,0,0" Width="145" Click="SaveChanges_Click" Grid.Row="1" Height="40" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Height="35">
                <Image Source="pack://application:,,,/Icons/OK.png" Width="36"/>
                <TextBlock Width="101" TextAlignment="Center"><Run Text="Сохранить "/><LineBreak/><Run Text="изменения"/></TextBlock>
            </StackPanel>
        </Button>

    </Grid>
</Window>
